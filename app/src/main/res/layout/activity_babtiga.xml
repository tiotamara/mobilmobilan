<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layHello"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@drawable/header_bab">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:textSize="26dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="BAB III" />
        <TextView
            android:id="@+id/txtJdlBab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignStart="@+id/txtBab3"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:text="Keseimbangan Ekosistem" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layHello">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="600px"/>

                <ProgressBar
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/progrss"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:layout_below="@id/videoView"
                    android:text="@string/bab3"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>